{% extends 'base.html.twig' %}

{% block title %}Etablissement index{% endblock %}

{% block body %}
    <h1>Etablissement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>City</th>
                <th>Address</th>
                <th>Description</th>
                <th>Image</th>
                <th>Creation_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etablissement in etablissements %}
            <tr>
                <td>{{ etablissement.id }}</td>
                <td>{{ etablissement.name }}</td>
                <td>{{ etablissement.city }}</td>
                <td>{{ etablissement.address }}</td>
                <td>{{ etablissement.description }}</td>
                <td>{{ etablissement.image }}</td>
                <td>{{ etablissement.creationDate ? etablissement.creationDate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_etablissement_show', {'id': etablissement.id}) }}">show</a>
                    <a href="{{ path('app_etablissement_edit', {'id': etablissement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_etablissement_new') }}">Create new</a>
{% endblock %}
